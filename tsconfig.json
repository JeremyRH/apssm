{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"outDir": "dist",
		"pretty": true,
		"strict": true,
		"target": "ES6"
	},
	"include": ["src/**/*"]
}
